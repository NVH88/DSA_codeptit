#include<bits/stdc++.h>
using namespace std;
#define ll long long
const int mod = 1e9 + 7;

int main() {
	int t;
	cin >> t;
	while(t--) {
		int n, k;
		cin >> n >> k;
		int a[n];
		for(int i = 0; i < n; i++) cin >> a[i];
		sort(a, a + n);
		k = min(k, n - k);
		int s = 0;
		for(int i = 0; i < k; i++) s -= a[i];
		for(int i = k; i < n; i++) s += a[i];
		cout << s << endl;
	}
}
