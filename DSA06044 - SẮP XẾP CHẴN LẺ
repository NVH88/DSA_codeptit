#include<bits/stdc++.h>
using namespace std;

bool cmp(int x, int y) {
	return x > y;
}

int main() {
	int n; cin >> n;
	int a[n];
	vector<int> v1;
	vector<int> v2;
	for(int i = 0; i < n; i++) {
		cin >> a[i];
		if(i % 2 == 0) v1.push_back(a[i]);
		else v2.push_back(a[i]);	
	}
	sort(v1.begin(), v1.end());
	sort(v2.begin(), v2.end(), cmp);
	int i = 0, j = 0;
	while(i < v1.size() && j < v2.size()) {
		cout << v1[i] << " " << v2[j] << " ";
		++i; ++j;
	}
	while(i < v1.size()) {
		cout << v1[i++] << " ";
	}
	while(j < v2.size()) {
		cout << v2[j++] << " ";
	}
}
