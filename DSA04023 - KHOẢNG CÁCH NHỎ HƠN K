#include<bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
	int t; cin >> t;
	while(t--) {
		ll n, k; cin >> n >> k;
		ll a[n];
		for(ll &i : a) cin >> i;
		sort(a, a + n);
		ll cnt = 0;
		for(int i = 0; i < n; i++) {
			auto it = lower_bound(a, a + n, a[i] + k);
			if(it == a + n) {
				cnt += (n - i - 1);
			}
			else cnt += (it - a - i - 1);
		}
		cout << cnt << endl;
	}
}
