#include<bits/stdc++.h>
using namespace std;

bool visited[1005];
vector<int> ke[1005];
int n, m;

void ktao() {
	memset(visited, false, sizeof(visited));
	for(int i = 1; i <= 1000; i++) ke[i].clear();
	cin >> n >> m;
	for(int i = 1; i <= m; i++) {
		int x, y; cin >> x >> y;
		ke[x].push_back(y);
		ke[y].push_back(x);
	}
}

void DFS(int u) {
	visited[u] = true;
	for(int i : ke[u]) {
		if(!visited[i]) {
			DFS(i);
		}
	}
}


int main() {
	int t; cin >> t;
	while(t--) {
		ktao();
		int tplt = 0;
		for(int i = 1; i <= n; i++) {
			if(!visited[i]) {
				++tplt;
				DFS(i);
			}
		}
		cout << tplt << endl;
	}
}
