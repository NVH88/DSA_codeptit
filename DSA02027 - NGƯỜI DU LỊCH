#include<bits/stdc++.h>
using namespace std;

int n, c[20][20], mi, ans, visited[20], a[20];

void Try(int i, int cost) {
	for(int j = 1; j <= n; ++j) {
		if(!visited[j]) {
			visited[j] = 1;
			a[i] = j;
			if(i == n - 1) {
				ans = min(ans, cost + c[j][1] + c[a[i - 1]][j]);
			}
			else if(cost + c[a[i - 1]][j] + mi * (n - i + 1) < ans) Try(i + 1, cost + c[a[i - 1]][j]);
			visited[j] = 0;
		}
	}
}

int main() {
	mi = 1e9; ans = 1e9;
	cin >> n;
	for(int i = 1; i <= n; ++i) {
		for(int j = 1; j <= n; ++j) {
			cin >> c[i][j];
			if(i != j) mi = min(mi, c[i][j]);
		}
	}
	visited[1] = 1; a[0] = 1;
	Try(1, 0);
	cout << ans;
}
