#include<bits/stdc++.h>
using namespace std;
vector<int> adj[1005];

int main() {
	int t; cin >> t;
	while(t--) {
		for(int i = 0; i < 1005; i++) adj[i].clear();
		int n, m; cin >> n >> m;
		for(int i = 0; i < m; i++) {
			int x, y;
			cin >> x >> y;
			adj[x].push_back(y);
		}
		for(int i = 1; i <= n; i++) {
			sort(adj[i].begin(), adj[i].end());
		}
		for(int i = 1; i <= n; i++) {
			cout << i << ": ";
			for(int j : adj[i]) cout << j << " ";
			cout << endl;
		}
	}
}
