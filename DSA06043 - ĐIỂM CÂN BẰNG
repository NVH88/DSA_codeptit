#include<bits/stdc++.h>
using namespace std;

long long a[100005], b[100005], sum;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		sum = 0;
		cin >> a[0]; 
		b[0] = a[0]; 
		sum += a[0];
		for(int i = 1; i < n; i++) {
			cin >> a[i];
			sum += a[i];
			b[i] = b[i - 1] + a[i];
		}
		bool check = false;
		for(int i = 0; i < n; i++) {
			if((b[i] - a[i]) * 2 == sum - a[i]) {
				check = true;
				cout << i + 1 << endl;
				break;
			}
		}
		if(!check) cout << -1 << endl;
	}
}
