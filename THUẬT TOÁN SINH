#include<bits/stdc++.h>
using namespace std;

int a[100], n;

void Try(int i, int x) {
	for(int j = 0; j <= 1; j++) {
		a[i] = j;
		if(i == n) {
			for(int k = 1; k <= i; k++) {
				cout << a[k] << " ";
			}
			if(x == 0) {
				cout << 0 << " ";
			}
			if(x == 1) {
				cout << 1 << " ";
			}
			for(int k = i; k >= 1; k--) {
				cout << a[k] << " ";
			}
			cout << endl;
		}
		else Try(i + 1, x);
	}
}

int main() {
	cin >> n;
	if(n % 2 == 0) {
		n /= 2;
		Try(1, -1);
	}
	else {
		n /= 2;
		Try(1, 0);
		Try(1, 1);
	}
}
