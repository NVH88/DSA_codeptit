#include<bits/stdc++.h>
using namespace std;

int par[1005], sz[1005], n, m;

int find(int u) {
	if(u == par[u]) return u;
	return find(par[u]);
}

void Union(int u, int v) {
	u = find(u); v = find(v);
	if(u != v) {
		if(sz[u] < sz[v]) swap(u, v);
		sz[u] += sz[v];
		par[v] = u;
	}
}

int main() {
	int t; cin >> t;
	while(t--) {
		cin >> n >> m;
		for(int i = 1; i <= n; ++i) par[i] = i, sz[i] = 1;
		while(m--) {
			int u, v; cin >> u >> v;
			Union(u, v);
		}
		int q; cin >> q;
		while(q--) {
			int u, v; cin >> u >> v;
			if(find(u) == find(v)) cout << "YES" << endl;
			else cout << "NO" << endl;
		}
	}
}
