#include<bits/stdc++.h>
using namespace std;
#define ll long long
const int mod = 1e9 + 7;

ll pow1(ll n, ll k) {
	if(k == 0) return 1;
	ll x = pow1(n, k / 2);
	if(k % 2 == 0) return (x * x) % mod;
	return (n * ((x * x) % mod)) % mod;
}

int main() {
	for(int i = 1; i <= 20; i++) {
		ll a, b;
		cin >> a >> b;
		if(a == 0 && b == 0) return 0;
		cout << pow1(a, b) << endl;
	}
}
