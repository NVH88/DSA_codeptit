#include<bits/stdc++.h>
using namespace std;
#define ll long long

ll merge(ll a[], ll l, ll m, ll r) {
	vector<ll> v1(a + l, a + m + 1), v2(a + m + 1, a + r + 1);
	ll i = 0, j = 0, ans = 0;
	while(i < v1.size() && j < v2.size()) {
		if(v1[i] <= v2[j]) a[l++] = v1[i++];
		else {
			ans += v1.size() - i;
			a[l++] = v2[j++];
		}
	}
	while(i < v1.size()) a[l++] = v1[i++];
	while(j < v2.size()) a[l++] = v2[j++];
	return ans;
}

ll MergeSort(ll a[], ll l, ll r) {
	if(l >= r) return 0;
	ll ans = 0, m = (l + r) / 2;
	ans += MergeSort(a, l, m);
	ans += MergeSort(a, m + 1, r);
	ans += merge(a, l, m, r);
	return ans;
}

int main() {
	int t; cin >> t;
	while(t--) {
		ll n; cin >> n;
		ll a[n];
		for(ll &i : a) cin >> i;
		cout << MergeSort(a, 0, n - 1) << endl;
	}
}
