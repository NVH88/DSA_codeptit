#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		string s; cin >> s;
		int len = s.length();
		stack<int> st;
		for(int i = 0; i < len; ++i) {
			if(s[i] == '(') st.push(i);
			else if(st.size()) s[i] = '#', s[st.top()] = '#', st.pop();
		}
		int ans = 0;
		for(int l = 0; l < len; ++l) {
			if(s[l] == '#') {
				int r = l + 1;
				while(s[r] == '#') {
					++r;
				}
				ans = max(ans, r - l);
				l = r - 1;
			}
		}
		cout << ans << endl;
	}
}
