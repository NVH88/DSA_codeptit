#include<bits/stdc++.h>
using namespace std;

int dx[] = {-1, +0, +1, -1, +1, -1, +0, +1};
int dy[] = {-1, -1, -1, +0, +0, +1, +1, +1};
int n, m, ans, a[505][505];

void dfs(int u, int v) {
	a[u][v] = 0;
	for(int i = 0; i < 8; ++i) {
		int x = u + dx[i], y = v + dy[i];
		if(x >= 1 && x <= n && y >= 1 && y <= m && a[x][y]) dfs(x, y);
	}
}

int main() {
	int t; cin >> t;
	while(t--) {
		ans = 0; cin >> n >> m;
		for(int i = 1; i <= n; ++i) {
			for(int j = 1; j <= m; ++j) {
				cin >> a[i][j];
			}
		}
		for(int i = 1; i <= n; ++i) {
			for(int j = 1; j <= m; ++j) {
				if(a[i][j]) {
					++ans; dfs(i, j);
				}
			}
		}
		cout << ans << endl;
	}
}
