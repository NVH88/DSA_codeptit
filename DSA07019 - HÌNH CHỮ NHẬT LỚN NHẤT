#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		int a[n], b[n], c[n];
		for(int &i : a) cin >> i;
		stack<int> st;
		for(int i = n - 1; i >= 0; --i) {
			while(st.size() && a[i] <= a[st.top()]) st.pop();
			if(st.size()) b[i] = st.top();
			else b[i] = n;
			st.push(i);
		}
		while(st.size()) st.pop();
		for(int i = 0; i < n; ++i) {
			while(st.size() && a[i] <= a[st.top()]) st.pop();
			if(st.size()) c[i] = st.top();
			else c[i] = -1;
			st.push(i);
		}
		long long ans = 0;
		for(int i = 0; i < n; ++i) {
			ans = max(ans, (long long)a[i] * (b[i] - c[i] - 1));
		}
		cout << ans << endl;
	}
}
