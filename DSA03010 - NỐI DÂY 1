#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;
    while(t--) {
		int n; cin >> n;
		long long a[n];
		priority_queue<long long, vector<long long>, greater<long long>> q;
		for(int i = 0; i < n; i++) {
			cin >> a[i];
			q.push(a[i]);
		}
		long long res = 0;
		while(q.size() > 1) {
			long long x = q.top(); q.pop();
			long long y = q.top(); q.pop();
			q.push(x + y);
			res += x + y;
		} 
		cout << res << endl;
	}
}
