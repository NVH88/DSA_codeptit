#include<bits/stdc++.h>
using namespace std;
#define ll long long

string solve(ll p, ll q) {
	string res = "";
	vector<string> v;
	while(p > 0) {
		if(q % p == 0) {
			v.push_back("1/" + to_string(q / p));
			break;
		}
		else {
			ll tmp = q / p + 1;
			v.push_back("1/" + to_string(tmp));
			p = p * tmp - q;
			q *= tmp;
		}
	}
	for(string i : v) {
		res += i + " " + "+" + " ";
	}
	res.pop_back();
	res.pop_back();
	res.pop_back();
	return res;
}

int main() {
	int t; cin >> t;
	while(t--) {
		ll p, q; cin >> p >> q;
		cout << solve(p, q) << endl;
	}
}
