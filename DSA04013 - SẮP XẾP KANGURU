#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		int a[n];
		for(int &i : a) cin >> i;
		sort(a, a + n);
		int j = n / 2, i = 0, cnt = 0;
		while(j < n) {
			if(a[j] >= 2 * a[i]) {
				++i;
				++cnt;
			}
			++j;
		}
		cout << n - cnt << endl;
	}
}
