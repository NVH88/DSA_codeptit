#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		int a[n], t[n], g[n];
		for(int i = 0; i < n; i++) {
			cin >> a[i];
			t[i] = 1;
			g[i] = 1;
		}
		for(int i = 1; i < n; i++) {
			if(a[i] > a[i - 1]) t[i] = t[i - 1] + 1;
		}
		for(int i = n - 2; i >= 0; i--) {
			if(a[i] > a[i + 1]) g[i] = g[i + 1] + 1;
		}
		int ans = 0;
		for(int i = 0; i < n; i++) {
			ans = max(ans, t[i] + g[i] - 1);
		}
		cout << ans << endl;
	}
}
