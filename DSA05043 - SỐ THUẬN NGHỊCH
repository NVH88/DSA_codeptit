#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		string s; cin >> s;
		int n = s.length();
		int dp[n][n], ans = 1;
		memset(dp, 0, sizeof(dp));
		for(int i = 0; i < n; i++) dp[i][i] = 1;
		for(int i = 1; i < n; i++) if(s[i] == s[i - 1]) dp[i - 1][i] = 1, ans = 2;
		for(int len = 3; len <= n; len++) {
			for(int i = 0; i <= n - len; i++) {
				if(s[i] == s[i + len - 1] && dp[i + 1][i + len - 2]) {
					dp[i][i + len - 1] = 1;
					ans = max(ans, len);
				}
			}
		}
		cout << ans << endl;
	}
}
