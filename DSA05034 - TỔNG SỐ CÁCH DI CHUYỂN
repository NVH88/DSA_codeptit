#include<bits/stdc++.h>
using namespace std;
#define ll long long
const int M = 1e9 + 7;
ll dp[100005];

int main() {
	int t; cin >> t;
	while(t--) {
		int n, k; cin >> n >> k;
		memset(dp, 0, sizeof(dp));
		dp[0] = dp[1] = 1;
		for(int i = 2; i <= k; i++) {
			dp[i] = (2 * dp[i - 1]) % M;
		}
		for(int i = k + 1; i <= n; i++) {
			dp[i] = ((2 * dp[i - 1]) % M - dp[i - k - 1] + M) % M;
		}
		cout << dp[n] << endl;
	}
}
