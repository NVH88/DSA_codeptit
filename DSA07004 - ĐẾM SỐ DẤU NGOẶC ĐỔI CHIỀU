#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		string s; cin >> s;
		int dong = 0, mo = 0;
		stack<char> st;
		for(int i = 0; i < s.length(); ++i) {
			if(s[i] == '(') st.push(s[i]), ++mo;
			else {
				if(st.size()) st.pop(), --mo;
				else ++dong;
			}
		}
		cout << dong / 2 + mo / 2 + dong % 2 + mo % 2 << endl;
	}
}
