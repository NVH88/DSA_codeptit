#include<bits/stdc++.h>
using namespace std;

// mang dp[i][j]: so buoc de i ky tu cua s1 va j ky tu cua s2 can bien doi de tro thanh 2 xau bang nhau
// neu s1[i] == s2[j] thi k can thao tac nao
// insert: tuong tu voi viec delete 1 ky tu o xau s2 => dp[i][j] = dp[i][j - 1] + 1
// delete: dp[i][j] = dp[i - 1][j] + 1
// replace: tuong tu voi viec bo di o moi xau 1 ky tu => dp[i][j] = dp[i - 1][j - 1] + 1

int main() {
	int t; cin >> t; 
	while(t--) {
		string s1, s2;
		cin >> s1 >> s2;
		int n = s1.length(), m = s2.length();
		int dp[n + 1][m + 1];
		memset(dp, 0, sizeof(dp));
		for(int i = 0; i <= n; i++) dp[i][0] = i;
		for(int j = 0; j <= m; j++) dp[0][j] = j;
//		memset(dp, 0, sizeof(dp));
		for(int i = 1; i <= n; i++) {
			for(int j = 1; j <= m; j++) {
				if(s1[i - 1] == s2[j - 1]) dp[i][j] = dp[i - 1][j - 1];
				else dp[i][j] = min({dp[i][j - 1], dp[i - 1][j], dp[i - 1][j - 1]}) + 1;
			}
		}
		cout << dp[n][m] << endl;
	}
}
