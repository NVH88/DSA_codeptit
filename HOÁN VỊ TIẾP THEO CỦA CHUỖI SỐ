#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int x; cin >> x; cout << x << " ";
		string s; cin >> s;
		int i = s.length() - 2;
		while(s[i] >= s[i + 1] && i >= 0) --i;
		if(i == -1) {
			cout << "BIGGEST" << endl;
		}
		else {
			next_permutation(s.begin(), s.end());
			cout << s << endl;
		}
	}
}
