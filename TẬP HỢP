#include<bits/stdc++.h>
using namespace std;

int n, k, s, cnt, a[100];

void Try(int i, int sum) {
	for(int j = a[i - 1] + 1; j <= n; j++) {
		a[i] = j;
		if(i == k) {
			if(sum + j == s) ++cnt;
		}
		else Try(i + 1, sum + j);
	}
}

int main() {
	while(cin >> n >> k >> s) {
		if(n == 0 && k == 0 && s == 0) return 0;
		cnt = 0;
		Try(1, 0);
		cout << cnt << endl;
	}
}
