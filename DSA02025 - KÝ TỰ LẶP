#include<bits/stdc++.h>
using namespace std;

string s[15];
int a[15], x[15][15], used[15], n, ans, mi;

int dem(string a, string b) {
	int cnt = 0;
	set<char> se;
	for(char i : a) se.insert(i);
	for(char i : b) {
		if(se.count(i)) ++cnt;
	}
	return cnt;
}

void solve() {
	for(int i = 1; i <= n; ++i) {
		for(int j = i + 1; j <= n; ++j) {
			x[i][j] = dem(s[i], s[j]);
			x[j][i] = x[i][j];
			mi = min(mi, x[i][j]);
		}
	}
}

void Try(int i, int cost) {
	for(int j = 1; j <= n; ++j) {
		if(!used[j]) {
			used[j] = 1;
			a[i] = j;
			if(i == n) {
				ans = min(ans, cost + x[a[i - 1]][j]);
			}
			else if(cost + mi * (n - i) <= ans) Try(i + 1, cost + x[a[i - 1]][j]);
			used[j] = 0;
		}
	}
}

int main() {
	ans = 1e9; mi = 1e9;
	cin >> n;
	for(int i = 1; i <= n; ++i) cin >> s[i];
	solve();
	Try(1, 0);
	cout << ans;
}
