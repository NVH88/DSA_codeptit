#include <bits/stdc++.h>
using namespace std;

int n, s, w[20], v[20], a[20], kq[20];
bool final = false;

void ktao() {
    for(int i = 1; i <= n; i++) {
        a[i] = 0;
    }
}

void sinh() {
    int i = n;
    while(i >= 1 && a[i] == 1) {
        a[i] = 0;
        --i;
    }
    if(i == 0) {
        final = true;
    }
    else {
        a[i] = 1;
    }
}

bool check() {
    int sum = 0;
    for(int i = 1; i <= n; i++) {
        if(a[i] == 1) {
            sum += w[i];
        }
    }
    return sum <= s;
}

int main() {
    cin >> n >> s;
    for(int i = 1; i <= n; i++) {
        cin >> v[i];
    }
    for(int i = 1; i <= n; i++) {
        cin >> w[i];
    }
    ktao();
    int sum = 0;
    while(!final) {
        if(check()) {
            int tmp = 0;
            for(int i = 1; i <= n; i++) {
                if(a[i]) {
                    tmp += v[i];
                }
            }
            if(tmp > sum) {
            	sum = tmp;
            	for(int i = 1; i <= n; i++) {
            		kq[i] = a[i];
				}
			}
        }
        sinh();
    }
    cout << sum << endl;
    for(int i = 1; i <= n; i++) {
    	cout << kq[i] << " ";
	}
}
