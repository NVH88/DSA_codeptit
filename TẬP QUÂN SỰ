#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n, k; cin >> n >> k;
		int a[k + 1];
		set<int> se;
		for(int i = 1; i <= k; ++i) {
			cin >> a[i];
			se.insert(a[i]);
		}
		int i = k;
		while(a[i] == n - k + i && i > 0) --i; 
		if(i == 0) cout << k << endl;
		else {
			int cnt = k - i + 1;
			for(int j = i; j <= k; ++j) {
				if(se.count(a[i] + j - i + 1)) --cnt;
			}
			cout << cnt << endl;
		}
	}
}
