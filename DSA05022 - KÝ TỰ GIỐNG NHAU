#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		int dp[n + 5], x, y, z;
		cin >> x >> y >> z;
		dp[0] = 0; dp[1] = x;
		for(int i = 2; i <= n; i++) {
			dp[i] = dp[i - 1] + x;
			if(i % 2 == 0) dp[i] = min(dp[i], dp[i / 2] + z);
			else dp[i] = min(dp[i], dp[(i + 1) / 2] + z + y);
		}
		cout << dp[n] << endl;
	}
}
