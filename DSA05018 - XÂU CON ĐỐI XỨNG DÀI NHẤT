#include<bits/stdc++.h>
using namespace std;

int dp[1005][1005];

int main() {
	int t; cin >> t;
	while(t--) {
		memset(dp, 0, sizeof(dp));
		string s; cin >> s;
		dp[0][0] = 1;
		int ans = 1;
		for(int i = 1; i < s.length(); ++i) {
			dp[i][i] = 1;
			if(s[i] == s[i - 1]) dp[i - 1][i] = 1, ans = 2;
		}
		for(int len = 3; len <= s.length(); ++len) {
			for(int i = 0; i < s.length() - len + 1; ++i) {
				if(s[i] == s[i + len - 1] && dp[i + 1][i + len - 2]) {
					dp[i][i + len - 1] = 1;
					ans = max(ans, len);
				} 
			}
		}
		cout << ans << endl;
	}
}
