#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		string s; cin >> s;
		int n = s.length();
		int dp[n][n]; //dp[j][i] luu so ky tu can xoa trong string tu j den i
		memset(dp, 0, sizeof(dp));
//		for(int i = 0; i < n; i++) {
//			dp[i][0] = i + 1;
//			dp[0][i] = i + 1;
//		}
		for(int i = 1; i < n; i++) {
			for(int j = i - 1; j >= 0; j--) {
				if(s[i] == s[j]) dp[j][i] = dp[j + 1][i - 1];
				else dp[j][i] = 1 + min(dp[j + 1][i], dp[j][i - 1]);
			}
		}
		cout << dp[0][n - 1] << endl;
	}
}
