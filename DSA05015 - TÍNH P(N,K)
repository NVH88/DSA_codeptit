#include<bits/stdc++.h>
using namespace std;
#define ll long long
const int M = 1e9 + 7;

ll P(int n, int k) {
	if(k > n) return 0;
	ll p = 1;
	for(int i = 0; i <= k - 1; i++) {
		p = (p * (n - i)) % M;
	}
	return p;
}

int main() {
	int t; cin >> t; 
	while(t--) {
		int n, k; cin >> n >> k;
		cout << P(n, k) << endl;
	}
}
