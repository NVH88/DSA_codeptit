int solve(int a[], int n) {
	int lmin[n];
	lmin[0] = a[0];
	for(int i = 1; i < n; i++) {
		lmin[i] = min(lmin[i - 1], a[i]);
	}
	int i = n - 1, j = n - 1, ans = -1e9;
	while(i >= 0 && j >= 0) {
		if(a[i] > lmin[j]) {
			ans = max(ans, i - j);
			--j;
		}
		else {
			--i;
		}
	}
	return ans;
}

int main() {
	int t;
	cin >> t;
	while(t--) {
		int n;
		cin >> n;
		int a[n];
		for(int i = 0; i < n; i++) {
			cin >> a[i];
		}
		cout << solve(a, n) << endl;
	}
}
