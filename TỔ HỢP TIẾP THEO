#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n, k; cin >> n >> k;
		int a[k + 1];
		set<int> se;
		for(int i = 1; i <= k; i++) {
			cin >> a[i];
			se.insert(a[i]);
		}
		int i = k, x1 = se.size();
		while(a[i] == n - k + i && i > 0) --i;
		if(i == 0) {
			cout << k << endl;
		}
		else {
			++a[i]; se.insert(a[i]);
			for(int j = i + 1; j <= k; j++) {
				a[j] = a[j - 1] + 1;
				se.insert(a[j]);
			}
			cout << se.size() - x1 << endl;
		}
	}
}
