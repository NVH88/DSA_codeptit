#include<bits/stdc++.h>
using namespace std;

int n, m, a[100];

void Try(int i, int cnt) {
	for(int j = 0; j <= 1; j++) {
		a[i] = j;
		if(i == n) {
			if(cnt + a[i] == m) {
				for(int k = 1; k <= n; k++) {
					cout << a[k];
				}
				cout << endl;
			}
		}
		else Try(i + 1, cnt + a[i]);
	}
}

int main() {
	int t; cin >> t;
	while(t--) {
		cin >> n >> m;
		Try(1, 0);
	}
}
