#include<bits/stdc++.h>
using namespace std;

int n, k, a[20];
string tmp = "";
vector<string> v;

void Try(int i,	bool ok, string s) {
	if(i == n + 1) {
		if(ok) {
			v.push_back(s);
		}
		return;
	}
	if(!ok && a[i - 1] != 1) {
		a[i] = 0;
		Try(i + 1, 1, s + tmp);
	}
	if(a[i - 1] != 0) {
		a[i] = 1;
		Try(i + 1, ok, s + "A");
	}
	a[i] = 2;
	Try(i + 1, ok, s + "B");
}

int main() {
	a[0] = -1;
	cin >> n >> k;
	n = n - k + 1;
	for(int i = 0; i < k; i++) tmp += "A";
	Try(1, 0, "");
	cout << v.size() << endl;
	for(string i : v) cout << i << endl;
}
