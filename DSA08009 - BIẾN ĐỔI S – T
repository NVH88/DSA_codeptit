#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int a, b; cin >> a >> b;
		queue<pair<int, int>> q;
		q.push({a, 0}); 
		set<int> se; se.insert(a);
		while(1) {
			pair<int, int> pi = q.front(); q.pop();
			int f = pi.first, s = pi.second;
			if(f == b) {
				cout << s << endl;
				break;
			}
			if(!se.count(f - 1) && f - 1 > 0) q.push({f - 1, s + 1}), se.insert(f - 1);
			if(!se.count(f * 2) && f * 2 <= b * 2) q.push({f * 2, s + 1}), se.insert(f * 2);
		}
	}
}
