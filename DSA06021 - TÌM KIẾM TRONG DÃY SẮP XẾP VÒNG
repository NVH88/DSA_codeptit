#include<bits/stdc++.h>
using namespace std;
#define ll long long

int a[10000001];

int main() {
	int t;
	cin >> t;
	while(t--) {
		int n, k;
		cin >> n >> k;
		int idx;
		bool check = false;
		for(int i = 0; i < n; i++) {
			cin >> a[i];
			if(a[i] == k && check == false) {
				idx = i + 1;
				check = true;
			}
		}
		cout << idx << endl;
	}
}
