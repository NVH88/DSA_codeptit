#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	while(t--) {
		int n; cin >> n;
		int a[n], b[n], c[n];
		for(int &i : a) cin >> i;
		stack<int> st;
		for(int i = 0; i < n; ++i) {
			while(st.size() && a[st.top()] >= a[i]) st.pop();
			if(st.size()) b[i] = st.top();
			else b[i] = -1;
			st.push(i);
		}
		while(st.size()) st.pop();
		for(int i = n - 1; i >= 0; --i) {
			while(st.size() && a[st.top()] >= a[i]) st.pop();
			if(st.size()) c[i] = st.top();
			else c[i] = n;
			st.push(i);
		}
		int ans = 0;
		for(int i = 0; i < n; ++i) {
			if(c[i] - b[i] - 1 >= a[i]) ans = max(ans, a[i]);
		}
		cout << ans << endl;
	}
}
