#include <bits/stdc++.h>
using namespace std;
#define ll long long
const int mod = 1e9 + 7;

int main() {
	int t; cin >> t;
	while(t--) {
	    ll n;
	    cin >> n;
	    ll a[n];
	    set<ll> se;
	    for(int i = 0; i < n; i++) {
	    	cin >> a[i];
		}
		bool check = false;
		int ans;
		for(int i = 0; i < n - 1; i++) {
			ll x; cin >> x;
			if(!check && x != a[i]) {
				check = true;
				ans = i + 1;
			}
		}
		cout << ans << endl;
	}
}
