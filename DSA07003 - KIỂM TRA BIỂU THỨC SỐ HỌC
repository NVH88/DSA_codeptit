#include<bits/stdc++.h>
using namespace std;

int main() {
	int t; cin >> t;
	cin.ignore();
	while(t--) {
		string s; getline(cin, s);
		stack<char> st;
		bool ok = false;
		for(int i = 0; i < s.length(); ++i) {
			if(s[i] == ')') {
				if(!st.size() || st.top() == '(') {
					ok = true;
					break;
				}
				while(st.top() != '(') st.pop();
				st.pop();
			}
			else if(s[i] == '(' || s[i] == '+' || s[i] == '-' || s[i] == '*' || s[i] == '/') st.push(s[i]);
		}
		if(ok) cout << "Yes" << endl;
		else cout << "No" << endl;
	}
}
