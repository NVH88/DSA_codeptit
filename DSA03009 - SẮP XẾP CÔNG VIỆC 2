#include <bits/stdc++.h>
using namespace std;

bool cmp(pair<int, int> a, pair<int, int> b) {
	if(a.second == b.second) return a.first < b.first;
	return a.second > b.second;
}

int main() {
    int t;
    cin >> t;
    while(t--) {
		int n; cin >> n;
		pair<int, int> p[n];
		for(int i = 0; i < n ; i++) {
			int x; cin >> x;
			cin >> p[i].first >> p[i].second;
		}
		sort(p, p + n, cmp);
		bool used[1005];
		memset(used, false, sizeof(used));
		int ans = 0, cnt = 0;
		for(int i = 0; i < n; i++) {
			int j = p[i].first - 1;
			while(j >= 0) {
				if(!used[j]) {
					used[j] = true;
					ans += p[i].second;
					++cnt;
					break;
				}
				--j;
			}
		}
		cout << cnt << " " << ans << endl;
	}
}
