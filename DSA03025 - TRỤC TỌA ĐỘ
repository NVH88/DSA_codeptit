#include<bits/stdc++.h>
using namespace std;

bool cmp(pair<int, int> a, pair<int, int> b) {
	return a.second < b.second;
}

int main() {
	int t;
	cin >> t;
	while(t--) {
		int n;
		cin >> n;
		pair<int, int> p[n + 1];
		for(int i = 1; i <= n; i++) {
			int x, y;
			cin >> x >> y;
			p[i] = {x, y};
		}
		sort(p + 1, p + 1 + n, cmp);
		int fi = -1, cnt = 0;
		for(int i = 1; i <= n; i++) {
			if(p[i].first >= fi) {
				++cnt;
				fi = p[i].second;
			}
		}
		cout << cnt << endl;
	}
}
