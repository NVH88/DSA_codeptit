#include<bits/stdc++.h>
using namespace std;
#define ll long long
const int mod = 1e9 + 7;

ll Find(ll n, ll k) {
	if(k % 2 == 1) return 1;
	else if(k == pow(2, n - 1)) return n;
	else if(k < pow(2, n - 1)) return Find(n - 1, k);
	return Find(n - 1, k - pow(2, n - 1));
}

int main() {
	int t; cin >> t;
	while(t--) {
		ll n, k; cin >> n >> k;
		cout << Find(n, k) << endl;
	}
}
