#include<bits/stdc++.h>
using namespace std;
#define ll long long

char Find(ll n, ll k) {
	if(k % 2) return 'A';
	else if(k == (ll)(pow(2, n - 1))) return (char)('A' + n - 1);
	else if(k < (ll)(pow(2, n - 1))) return Find(n - 1, k);
	return Find(n - 1, k - (ll)(pow(2, n - 1)));
}

int main() {
	int t; cin >> t;
	while(t--) {
		ll n, k;
		cin >> n >> k;
		cout << Find(n, k) << endl;
	}
}
